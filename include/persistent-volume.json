{
  "kind": "PersistentVolume",
  "apiVersion": "v1",
  "metadata": {
    "name": "pv0001",
    "labels": {
      "type": "local"
    }
  },
  "spec": {
    "capacity": {
      "storage": "20Gi"
    },
    "accessModes": [
      "ReadWriteMany"
    ],
    "persistentVolumeReclaimPolicy": "Recycle",
    "hostPath": {
      "path": "/tmp/pvc"
    }
  }
}
